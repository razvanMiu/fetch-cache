{
  "extends": "@fetch-cache/tsconfig/library-strict",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "paths": {
      "fetch-cache": ["src"],
      "fetch-cache/config": ["src/lib/Config"],
      "fetch-cache/cache": ["src/lib/Cache"],
      "fetch-cache/client": ["src/lib/Client"],
      "fetch-cache/utils": ["src/lib/Utils"],
      "fetch-cache/types": ["src/types"]
    }
  },
  "include": ["src/**/*.ts", "src/types/*.d.ts", "eslint.config.mjs"]
}
